<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add product form</title>
    <link rel="icon"
        href="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcT9GolDbraUj1KMN5W9M7hKz-wKaibpdlbcuw&usqp=CAU">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
        integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"
        integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct"
        crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/c0c3f998d0.js" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:wght@100&family=Montserrat:wght@500&family=Open+Sans:wght@300&family=Roboto:wght@100;300&family=Ubuntu:ital,wght@0,500;1,500&display=swap"
        rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:wght@100&family=Montserrat:wght@700&family=Open+Sans:wght@300&family=Roboto:wght@100;300&display=swap"
        rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div class="container">
        <form action="/add-product" method="post">
            <h1 class="main-heading">Add product</h1>
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Name:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="productname" placeholder="Product name">
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Category:</label>
                <div class="col-sm-10">
                    <select id="inputState" class="form-select" name="Category">
                        <option selected>Category...</option>
                        <option>Fruits&Vegetables</option>
                        <option>Snacks&Beverages</option>
                        <option>Cleaning&Households</option>
                        <option>Bakery</option>
                        <option>Makeup</option>
                        <option>Others</option>
                    </select>
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">brand:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="productbrand" placeholder="Product brand">
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">price:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="productprice" placeholder="Product price">
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Units:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="No_of_units" placeholder="Number of units available">
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">images:</label>
                <div class="col-sm-10">
                    <input type="file" id="inpu1" name="img" accept="image/*" class="form-control" name="productimg"
                        multiple="multiple" placeholder="images">
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label check">(or use url by clicking checkbox)</label>
                <div class="col-sm-10">
                    <input type="checkbox" id="useInput2" name="useInput2" onchange="toggleInput()"><br><br>
                    <input class="form-control" type="text" id="input2" placeholder="Enter URL"
                        disabled><br><br>
                </div>
            </div>

            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">description:</label>
                <div class="col-sm-10">
                    <textarea class="form-control" placeholder="Product description" id="floatingTextarea2"
                        style="height: 100px" name="productdescription"></textarea>
                </div>
            </div>
            <div class="subcontainer">
                <input type="submit" class="submitbtn" value="Add item">
            </div>
        </form>
    </div>
    <script>
        function toggleInput() {
            const input1 = document.getElementById("inpu1");
            const input2 = document.getElementById("input2");
            const useInput2Checkbox = document.getElementById("useInput2");
        
            if (useInput2Checkbox.checked) {
                input1.disabled = true;
                input1.removeAttribute("name"); // Remove the name attribute from input1
                input2.disabled = false;
                input2.setAttribute("name", "productimg"); // Add the name attribute to input2
            } else {
                input1.disabled = false;
                input1.setAttribute("name", "productimg"); // Add the name attribute to input1
                input2.disabled = true;
                input2.removeAttribute("name"); // Remove the name attribute from input2
            }
        }
    </script>
    
    
</body>

<style>
    /* Reset default margin and padding */
    body,
    h2,
    h3,
    p,
    ul,
    li {
        margin: 0;
        padding: 0;
    }

    /* Set a background color and base font */
    body {
        font-family: 'Roboto', Arial, sans-serif;
        background-color: #f8f9fa;
        /* Light gray background */
    }

    .main-heading {
        text-align: center;
    }

    /* Style the form container */
    .container {
        max-width: 600px;
        margin: 0 auto;
        /* Center the container horizontally */
        padding: 20px;
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    /* Style the form inputs */
    .form-control {
        margin-bottom: 10px;
        padding: 10px;
        border: 1px solid #ced4da;
        border-radius: 4px;
    }

    /* Style the submit button */
    .submitbtn {
        display: block;
        width: 100%;
        padding: 10px;
        background-color: rgb(146, 226, 27);
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    /* Add some spacing for the submit button */
    .subcontainer {
        margin-top: 20px;
        text-align: center;
    }

    .check {
        display: block;
    }
</style>

</html>